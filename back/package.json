  "main": "index.js",
  "scripts": {
    "dev": "tsnd -r tsconfig-paths/register --transpile-only --respawn --ignore-watch node_modules src/main.ts",
    "tsc": "tsc --noEmit --watch",
    "lazy": "start /min cmd . /k npm run tsc & start /min cmd . /k npm run test & npm run dev",
    "db:init": "npx prisma migrate dev & npx prisma generate",
    "db:push": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset",
    "db:pull": "npx prisma db pull",
    "db:client": "npx prisma studio",
    "test": "vitest --silent=passed-only -w",
    "test:verbose": "vitest --reporter=verbose",
    "test:unit": "npm test -- --project=unit",
    "test:integration": "npm test -- --project=integration",
    "test:staged": "npm test -- related --run",
    "test:ci": "npm test -- --coverage --run"
  },

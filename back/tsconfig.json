{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {   
    "paths": {
      "@/*": ["./src/*", "./generated/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowJs": true
  },
  "include": ["src/**/*.ts"]
}

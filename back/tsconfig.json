{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "24.0.0",

  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*", "./generated/*", "./prisma/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ES2022", "ESNext"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*.ts"]
}

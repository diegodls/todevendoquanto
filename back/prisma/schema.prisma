generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  BASIC
}

enum ExpenseStatus {
  PAYING
  PAID
  ABANDONED

  @@map("ExpensesStatus")
}

model User {
  id        String    @id
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  name      String
  password  String
  email     String    @unique
  role      Role      @default(BASIC)
  isActive  Boolean   @default(true) @map("is_active")
  expenses  Expense[]

  @@map("users")
}

model Expense {
  id                String        @id
  expenseId         String
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")
  name              String
  description       String
  amount            Int
  totalAmount       Int           @map("total_amount")
  status            ExpenseStatus @default(PAYING)
  tags              String[]
  actualInstallment Int           @map("actual_installment")
  totalInstallment  Int           @map("total_installment")
  paymentDay        DateTime      @map("payment_day")
  expirationDay     DateTime      @map("expiration_day")
  paymentStartAt    DateTime      @map("payment_start_at")
  paymentEndAt      DateTime      @map("payment_end_at")
  user              User?         @relation(fields: [userId], references: [id])
  userId            String?       @map("user_id")

  @@map("expenses")
}

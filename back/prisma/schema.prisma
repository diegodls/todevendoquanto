generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  BASIC
}

enum BillStatus {
  PAYING
  PAID
  ABANDONED
}

model User {
  id        String   @id
  name      String
  password  String
  email     String   @unique
  role      Role     @default(BASIC)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  isActive  Boolean  @default(true) @map("is_active")
  bills     Bill[]

  @@map("users")
}

model Bill {
  id             String     @id
  name           String
  description    String
  value          Float
  status         BillStatus @default(PAYING)
  expirationDate DateTime   @map("expiration_date")
  tags           String[]
  paymentSplitIn Int        @map("payment_split_in")
  paymentStartAt DateTime   @map("payment_start_at")
  paymentEndAt   DateTime   @map("payment_end_at")
  createdAt      DateTime   @default(now()) @map("created_at")
  updatedAt      DateTime   @updatedAt @map("updated_at")
  user           User?      @relation(fields: [userId], references: [id])
  userId         String?    @map("user_id")

  @@map("user_bills")
}

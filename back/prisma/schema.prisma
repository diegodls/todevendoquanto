generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  BASIC
}

model User {
  id          String   @id
  name        String
  password    String
  email       String   @unique
  role        Role     @default(BASIC)
  permissions String[] @default([])

  @@map("users")
}

model Product {
  id       String @id
  name     String
  price    Float
  quantity Int

  @@map("products")
}

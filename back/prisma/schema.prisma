generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  BASIC
}

enum BillStatus {
  PAYING
  PAID
  ABANDONED
}

model User {
  id        String   @id
  name      String
  password  String
  email     String   @unique
  role      Role     @default(BASIC)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
  bills     Bill[]

  @@map("users")
}

model Bill {
  id             String     @id
  name           String
  description    String
  value          Float
  status         BillStatus @default(PAYING)
  expirationDate DateTime
  tags           String[]
  paymentSplitIn Int
  paymentStartAt DateTime
  paymentEndAt   DateTime
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  user           User?      @relation(fields: [userId], references: [id])
  userId         String?

  @@map("userBills")
}
